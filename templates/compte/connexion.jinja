{% extends "base.jinja" %}
{% block contenu %}
    {% if not utilisateur %}
        <form class="form-login my-5" action="/compte/connexion" method="post">


            <div class="form-group">
                <label for="emailInput" class="form-label mt-4">Courriel</label>
                <input type="email" class="form-control {{ classe_erreur }}" id="emailInput" aria-describedby="emailHelp"
                       placeholder="Entrer votre courriel" name="courriel">

            </div>
            <div class="form-group">
                <label for="mdpInput" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control {{ classe_erreur }}" id="mdpInput"
                       placeholder="Entrer votre mot de passe" name="mdp">
                <div class="invalid-feedback">Courriel ou Mot de passe invalide</div>

            </div>
            <button type="submit" class="btn btn-primary mt-3">Connexion</button>

        </form>
    {% endif %}
{% endblock %}